# VLA Integration - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# OpenAI API Configuration
# ============================================================================
# OpenAI API key for LLM cognitive planning (GPT-4)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI model to use for intent parsing and action planning
# Options: gpt-4-turbo, gpt-4, gpt-3.5-turbo (faster but less accurate)
OPENAI_MODEL=gpt-4-turbo

# LLM request timeout in seconds
LLM_TIMEOUT=10.0

# ============================================================================
# Whisper Configuration
# ============================================================================
# Whisper model size: tiny, base, small, medium, large
# Recommendation: medium (balance speed/accuracy)
WHISPER_MODEL=medium

# Transcription confidence threshold (0.0-1.0)
# Commands below this threshold trigger retry request
WHISPER_CONFIDENCE_THRESHOLD=0.7

# Enable GPU acceleration for Whisper (requires CUDA)
# Options: true, false
WHISPER_USE_GPU=true

# ============================================================================
# Audio Configuration
# ============================================================================
# Audio sample rate in Hz (16000 recommended for speech)
AUDIO_SAMPLE_RATE=16000

# Audio input device index (use -1 for default)
# List devices with: python -c "import pyaudio; p = pyaudio.PyAudio(); [print(f'{i}: {p.get_device_info_by_index(i)[\"name\"]}') for i in range(p.get_device_count())]"
AUDIO_DEVICE_INDEX=-1

# Audio chunk size for processing (samples)
AUDIO_CHUNK_SIZE=1024

# Maximum recording duration in seconds
AUDIO_MAX_DURATION=60

# Voice Activity Detection (VAD) threshold (0.0-1.0)
# Higher = more sensitive to voice
VAD_THRESHOLD=0.5

# ============================================================================
# ROS 2 Configuration
# ============================================================================
# ROS Domain ID (0-232)
# Use unique ID to isolate from other ROS systems on network
ROS_DOMAIN_ID=42

# Restrict ROS communication to localhost only (recommended for security)
# Options: 1 (localhost only), 0 (network communication allowed)
ROS_LOCALHOST_ONLY=1

# ROS action timeout in seconds
ROS_ACTION_TIMEOUT=30.0

# ============================================================================
# Safety & Validation Configuration
# ============================================================================
# Maximum plan steps allowed (prevents infinite loops)
MAX_PLAN_STEPS=10

# Joint limit safety margin (percentage)
# Example: 0.1 = 10% margin from actual joint limits
JOINT_LIMIT_MARGIN=0.1

# Maximum force threshold (Newtons)
MAX_FORCE_THRESHOLD=50.0

# Maximum velocity (m/s or rad/s depending on joint type)
MAX_VELOCITY=0.5

# Enable collision checking during validation
# Options: true, false
ENABLE_COLLISION_CHECKING=true

# ============================================================================
# Logging Configuration
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log directory (relative to project root)
LOG_DIR=./logs

# Enable structured JSON logging
# Options: true, false
ENABLE_JSON_LOGGING=true

# Log execution traces to file
# Options: true, false
LOG_EXECUTION_TRACES=true

# ============================================================================
# Pipeline Configuration
# ============================================================================
# Overall voice-to-action latency budget (seconds)
# Warning triggered if exceeded
LATENCY_BUDGET=3.0

# Enable plan caching for common commands
# Options: true, false
ENABLE_PLAN_CACHING=true

# Retry attempts for failed transcriptions
TRANSCRIPTION_RETRY_ATTEMPTS=2

# Retry attempts for failed LLM calls
LLM_RETRY_ATTEMPTS=3

# ============================================================================
# Simulation Configuration (Development)
# ============================================================================
# Gazebo world file (relative to project root)
GAZEBO_WORLD_FILE=src/simulation/worlds/household_world.sdf

# Robot URDF/SDF description file
ROBOT_DESCRIPTION_FILE=src/simulation/robot_description/humanoid.urdf

# Enable Gazebo GUI
# Options: true, false
GAZEBO_GUI_ENABLED=true

# Simulation step time (seconds)
SIMULATION_STEP_TIME=0.001

# ============================================================================
# Feature Flags (Optional)
# ============================================================================
# Enable multi-step task planning (User Story 2)
ENABLE_MULTI_STEP_PLANNING=true

# Enable real-time interruptions (User Story 3)
ENABLE_INTERRUPTIONS=true

# Enable clarification dialogue for ambiguous commands
ENABLE_CLARIFICATION=true

# Enable performance monitoring and metrics collection
ENABLE_PERFORMANCE_MONITORING=true